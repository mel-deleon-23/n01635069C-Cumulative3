
@{
    ViewBag.Title = "New";
}

<div>
    <nav>
        <a class="navlink" href="/Student/List">Back to Students</a>
    </nav>

    <h2>New Student</h2>

    <form method="POST" action="/Student/Create">
        <div class="s_input">
            <label for="StudentId">Student ID: </label>
            <input type="text" id="studentid" name="studentid" />
        </div>

        <div class="s_input">
            <label for="StudentFName">First Name: </label>
            <input type="text" id="studentfname" name="studentfname" />
        </div>

        <div class="s_input">
            <label for="StudentLName">Last Name: </label>
            <input type="text" id="studentlname" name="studentlname" />
        </div>

        <div class="s_input">
            <label for="StudentNumber">Student #: </label>
            <input type="text" id="studentnumber" name="studentnumber" />
        </div>

        <div class="s_input">
            <input type="submit" value="Add Student" />
        </div>

    </form>

</div>

